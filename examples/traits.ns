Runnable = trait({
  run: -> speed
    print(@name, 'is running with traits at speed', speed)
    puts()
  end
})

Executable = trait({
  run: ->
    puts('Executing task')
  end
})

person = Object.clone({ name: 'John' })
person.uses(Runnable)

person.run = -> speed
  @Runnable run(speed)
  @Executable run()
end

person.uses(Executable)

person.run(10)
